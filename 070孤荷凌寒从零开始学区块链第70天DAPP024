            //查询参与的节点
            function getAllAddress(){
                try{
                    cc.getalladdress(function(error, result){
                    if(!error)
                    {
                        //result本身就是一个数组对象。
                        //alert(result.length);
                        var strls="";
                        for(i=0;i<result.length;i=i+2){
