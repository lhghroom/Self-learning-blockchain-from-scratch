            //查询指定节点地址的参与众筹金额
            function getAddressGift(a){
                try {
                    cc.getGiftBalanceFrom(a,function(error, result){
                        if(!error)
                    {
                        //alert(result); 
                        var fln=result / (10**18);
                        $("#address").html("此节点共参与众筹：" + fln + "ether");
