            //--参与众筹-------------
            function cmddo_click(){
                try{
                    var strls=document.getElementById("txtvalue").value;
                    //alert(strls);
                    if(/^[0-9]+\.?[0-9]+?$/.test(strls)){
                        var fls=parseFloat(strls);
                        //var intls=fls * (10**18);
                        k=dodate(fls);
                    }else{
                        alert('只能输入数字');
                    }
                }catch(err){
                    alert("操作失败：" + err);
                }
            }

            //---参与众筹都取回自己的参与金额---
            function cmdgetback_click(){
                try {
                    getmygiftback();
                } catch (error) {
                    alert("操作失败：" + error);
                }
            }

            //众筹发起者取走成功众筹的金额
            function cmddo_click(){
                try {
                    getdraw();
                } catch (error) {
                    alert("操作失败：" + error)   
                }
            }

    
