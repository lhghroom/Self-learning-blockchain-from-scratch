            //查询所有节点 与参与金额
            function getallgiftandvalue(){
                try {
                    cc.getgift(function(error, result){
                    if(!error)
                    {
                        //result本身就是一个数组对象。
                        //alert(result.length);

                        if(result.length>1){
                            var adds=result[0];
                            var vs=result[1];
                            //alert(adds.length);
                            //alert(vs.length);
                            var strls="";
                            var fln=0.0;
