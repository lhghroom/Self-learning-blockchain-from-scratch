                        document.getElementById("allapproveaddress").innerText='获取出错：' + error;
                    }});
                    //return "ok"
                    document.getElementById("allapproveaddress").innerText='获取中.....';
                }catch(err){
                    alert("查询出错：" + err)
                    return err;
                }
            }

