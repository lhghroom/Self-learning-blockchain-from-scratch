            function querryaddressbalance(){
                try{
                    var a=document.getElementById("txtaddressforone").value;
                    if(a!=""){
                        cc.balanceOf(a,function(error, result){
                        if(!error)
                        {
                            //var da=result[0];
                            //var xi=result[1];
                            //var intda=da / (10**18);
                            //var intxi=xi / (10**18); 
                            $("#total").html("当前地址拥有：" + result + "个资产");
                            //alert(result);
                        }
                        else{
                            //alert(error);
                            $("#total").html('获取出错：' + error);
                        }});
                        //return "ok"
                        $("#total").html('正在获取。。。');
                    }else{
                        alert("请先填写正确的节点地址。");
                    }

                }catch(err){
                    $("#total").html('出错 ：' + err);
                }
            }
